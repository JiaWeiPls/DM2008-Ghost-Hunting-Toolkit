<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B322E"
    android:fitsSystemWindows="true"
    tools:context="com.example.vmac.WatBot.MainActivity">

    <ImageView
        android:id="@+id/emfscreenback"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/emfscreenback" />

    <ImageView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/screen2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/findmelogo" />

    <TextView
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="DM-2008" />

    <TextView
        android:id="@+id/emf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:gravity="center"
        android:text="Electromagnetic Field" />

    <TextView
        android:id="@+id/detector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="305dp"
        android:gravity="center"
        android:text="Detector / EMF" />


    <ImageView
        android:id="@+id/onoff"
        android:layout_width="253dp"
        android:layout_height="210dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="450dp"
        app:srcCompat="@drawable/switch_8" /><!--<a href='https://www.freepik.com/vectors/design'>Design vector created by aranjuezmedina - www.freepik.com</a>-->


    <ImageView
        android:id="@+id/knob1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="430dp"
        app:srcCompat="@drawable/spiritboxknob1_8" /><!--<a href='https://www.freepik.com/vectors/music'>Music vector created by GarryKillian - www.freepik.com</a>-->
    <ImageView
        android:id="@+id/knob2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="580dp"
        app:srcCompat="@drawable/spiritboxknob2_8" />

    <!--<a href='https://www.freepik.com/vectors/music'>Music vector created by GarryKillian - www.freepik.com</a>-->


</android.support.design.widget.CoordinatorLayout>