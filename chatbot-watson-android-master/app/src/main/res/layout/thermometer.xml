<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000835"
    android:fitsSystemWindows="true"
    tools:context="com.example.vmac.WatBot.MainActivity">

    <ImageView
        android:id="@+id/thermcreenback"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/emfscreenback" />

    <ImageView
        android:id="@+id/thermcreenback2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/emfscreenback" />

    <ImageView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/screen2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/screen3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/screen4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/screen5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/spiritbox_screen" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_marginTop="290dp"
        app:srcCompat="@drawable/findmelogo" />

    <TextView
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="DM-2008" />

    <TextView
        android:id="@+id/thermometer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:text="Thermometer"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/thermswitch"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/thermswitch" />

    <TextView
        android:id="@+id/cel"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="167dp"
        android:layout_marginLeft="230dp"
        android:fontFamily="@font/seven_segment"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/deg"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="220dp"
        android:fontFamily="@font/seven_segment"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/seven_segment"
        android:gravity="center"
        android:rotation="90"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="339dp"
        android:layout_height="153dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/seven_segment"
        android:gravity="center"
        android:text="99.9"
        android:textColor="@color/black"
        android:textSize="70dp" />

    <ImageButton
        android:id="@+id/emfButton"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="650dp"
        android:background=""
        android:scaleType="center"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:srcCompat="@drawable/emficon" />

    <ImageButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="630dp"
        android:background=""
        android:scaleType="center"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:srcCompat="@drawable/radioicon" />


</android.support.design.widget.CoordinatorLayout>